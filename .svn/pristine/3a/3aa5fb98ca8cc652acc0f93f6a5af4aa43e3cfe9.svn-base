.body-content {
    min-height: 600px;
}

.chat-board {
    /*background-color: #ebebeb;*/
    font-family: -apple-system;
    font-family: "-apple-system", "Helvetica Neue", "Roboto", "Segoe UI", sans-serif;
    overflow-y: auto;
}

.chat-self,
.chat-other{
    clear: both;
    font-size: 80%;
}

.chat-self .logo {
    float: right;
}

.chat-other .logo {
    float: left;
}

.chat-self .name,
.chat-other .name {
    margin: 0px 50px 2px 50px;
    padding: 0px;
    color: #848484;
    font-size: 70%;
}

.chat-self .name {
    text-align: right;
}

.chat-other .name {
    text-align: left;
}

.chat-self .content-box,
.chat-other .content-box {
    padding: 10px 10px 10px 10px;
    border-radius: 7px;
    max-width: 75%;
}

.chat-self .content-box {
    background-color: #b2e281;
    margin: 0 10px 10px;
    float: right;
}

.chat-other .content-box {
    background-color: white;
    margin: 0 25% 10px 50px;
    width: fit-content;
}

.chat-self .logo img,
.chat-other .logo img {
    width: 40px;
    height: 40px;
    /*border-radius: 10%;*/
}

.chat-self .chat-triangle,
.chat-other .chat-triangle {
    height: 0px;
    width: 0px;
    border-width: 6px;
    border-style: solid;
    position: relative;
    top: -2px;
}

.chat-self .chat-triangle {
    float: right;
    right: -22px;
    border-color: transparent transparent transparent #b2e281;
}

.chat-other .chat-triangle {
    float: left;
    right: 22px;
    border-color: transparent white transparent transparent;
}

.chat-self .content,
.chat-other .content {
    word-wrap: break-word;
    white-space: pre-wrap;
}

.chat-other .content {
    text-indent: -12px;
}

.chat-notice {
    clear: both;
    font-size: 70%;
    color: white;
    text-align: center;
    margin-top: 15px;
    margin-bottom: 15px;
}

.chat-notice span {
    background-color: rgba(206, 206, 206, 0.618);
    line-height: 25px;
    border-radius: 5px;
    padding: 5px 10px;
}